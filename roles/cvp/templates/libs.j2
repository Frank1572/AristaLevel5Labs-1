{% macro uplink_port_ip(intf_uplink) -%}
{% set spine_lc = spine_lc(intf_uplink) %}
{% set spine_po = spine_po(intf_uplink) %}
{% if spine_lc|int > 0 %}
{% set offset = spine_lc|int - 3 %}
{% else %}
{% set offset = 0 %}
{% endif %}
{% set ip = spine_po|int * 2 - 1 %}
{% set ip = ip + 72 * offset %}
{% set nextsubnet = 0 %}
{% if ip > 255 %}
{% set ip = ip - 256 %}
{% set nextsubnet = 1 %}
{% endif %}
{% if ip > 255 %}
{% set ip = ip - 256 %}
{% set nextsubnet = 2 %}
{% endif %}
{% set link_ip = ip %}
{# is it enough to only return the 3rd and 4th octet of the IPv4 address? #}
{{ nextsubnet }}.{{ ip }}
{%- endmacro %}

{% macro cell_id(intf_uplink, leafid) -%}
{% set spine_lc = spine_lc(intf_uplink) %}
{% set spine_po = spine_po(intf_uplink) %}
{% if leafid == 'a' %}
{% set cell_id  = (( spine_po|int + 1 ) / 2 )|int %}
{% endif %}
{% if leafid == 'b' %}
{% set cell_id  = (( spine_po|int ) / 2 )|int %}
{% endif %}
{% if spine_lc|int > 0 %}
{% set offset = spine_lc|int - 3 %}
{% set cell_id = cell_id + (offset * 18) %}
{% endif %}
{{ cell_id }}
{%- endmacro %}

