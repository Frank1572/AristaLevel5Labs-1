interface Ethernet25/1
   ip address 10.11.0.1/31
interface Ethernet26/1
   ip address 10.12.0.1/31
interface Ethernet35/1
   ip address 10.13.0.1/31
interface Ethernet36/1
   ip address 10.14.0.1/31
!
interface Loopback1
   description Router-ID
   ip address 10.100.1.1/32
!
interface Loopback900
   description NW-MGMT
   ip address {{ hec.lo900_prefix }}.15/32
!
interface Management1
   vrf forwarding OOB
   ip address {{ hec.oob_prefix }}.15/{{ hec.oob_mask }}
!
router bgp 641{{ hec.hec_nr }}.10001
   router-id 10.100.1.1
   neighbor 10.11.0.0 peer-group SPINE-PG
   neighbor 10.12.0.0 peer-group SPINE-PG
   neighbor 10.13.0.0 peer-group SPINE-PG
   neighbor 10.14.0.0 peer-group SPINE-PG
   neighbor 198.19.224.2 peer-group MLPEER-PG
   network 10.100.1.1/32
   network {{ hec.lo900_prefix }}.15/32


