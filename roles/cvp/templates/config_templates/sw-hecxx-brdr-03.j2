{% set cell_id   = 4 %}
{% set Lo2       = '10.200.1.' + cell_id %}
{% set asn_local = '641' + hec.hec_nr + '1000' + cell_id %}

vlan 900
   name NW-MGMT
vlan 914
   name FW-CORE-TRANS
vlan 915
   name FWT-CORE-TRANS
vlan 916
   name FW-BRDR-TRANS
vlan 920
   name RT-TRANS
vlan 940
   name Internet_DMZ
vlan 2001
   name TEST-CUSTOMER
vlan 2002-2499
!
interface Vxlan1
   vxlan vlan 914 vni 10914
   vxlan vlan 916 vni 10916
!
interface Port-Channel1103
   description rt-hec{{ hec.hec_nr }}-core-01c
   switchport mode trunk
   mlag 1103
interface Port-Channel1104
   description rt-hec{{ hec.hec_nr }}-core-01d
   switchport mode trunk
   mlag 1104
!
interface Ethernet1/1
   channel-group 1103 mode active
interface Ethernet2/1
   channel-group 1104 mode active
!
! ===== Spine Uplinks =====
interface Ethernet25/1,26/1,35/1,36/1
   no switchport
   mtu {{ hec.fabric.interlink_mtu }}
!
interface Ethernet25/1
   description ->sw-hec{{ hec.hec_nr }}-spine-11
interface Ethernet26/1
   description ->sw-hec{{ hec.hec_nr }}-spine-12
interface Ethernet35/1
   description ->sw-hec{{ hec.hec_nr }}-spine-13
interface Ethernet36/1
   description ->sw-hec{{ hec.hec_nr }}-spine-14
!
interface Loopback2
   ip address {{ Lo2 }}/32
!
mlag configuration
   domain-id MLAG-BRDR-03
!
router bgp {{ asn_local }}
   network {{ Lo2 }}/32
{% include "templates/config_templates/sw-hecxx-leaf-bgp.j2" %}

   neighbor MLPEER-PG remote-as {{ asn_local }}
!
