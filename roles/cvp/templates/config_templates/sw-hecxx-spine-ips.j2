{# below lines get included by sw-hecxx-spine-xx.j2 and sw-hecxx-spine.j2 #}

{% if hec.spine.model == "7504" or hec.spine.model == "7508"  %}
{% set lc_start = 3 %}
{% set lc_end   = lc_start + hec.spine.linecards %}
{% endif %}
{% if hec.spine.model == "7280" %}
{% set lc_start = 3 %}
{% set lc_end   = 4 %}
{% endif %}

{% for lc in range(lc_start, lc_end ) %}
{% for subintf in range(1,37) %}
{% set ip = loop.index * 2 - 2 %}
{% set offset = lc - 3 %}
{% set ip = ip + 72 * offset %}
{% set nextsubnet = 0 %}
{% if ip > 255 %}
{% set ip = ip - 256 %}
{% set nextsubnet = 1 %}
{% endif %}
{% if ip > 255 %}
{% set ip = ip - 256 %}
{% set nextsubnet = 2 %}
{% endif %}
{% if hec.spine.model|string == '7280' %}
interface Ethernet{{ subintf }}/1
{% endif %}
{% if hec.spine.model|string == '7504' or hec.spine.model|string == '7508'  %}
interface Ethernet{{ lc }}/{{ subintf }}
{% endif %}
{% if create_ip_on_interface == 'yes' %}
 ip address 10.{{ item }}.{{ nextsubnet }}.{{ ip }}/31
{% else %}
 shutdown
 no switchport
 mtu {{ hec.fabric.interlink_mtu }}
 speed forced {{ hec.fabric.interlink_speed }}
{% endif %}
!
{% endfor %}
{% endfor %}
