{% set cell_id = 4 %}
{% set Lo1     = '10.100.1.10' + cell_id %}
{% set asn_spine = '641' + hec.hec_nr + '10000' %}

hostname sw-hec{{ hec.hec_nr }}-brdr-03b
!
interface Ethernet1/1
   description "->rt-hec{{ hec.hec_nr }}-core-01c, Fo1/0/0"
interface Ethernet2/1
   description "->rt-hec{{ hec.hec_nr }}-core-01d, Fo1/0/0"
!
! ===== Spine Uplinks =====
interface Ethernet25/1,26/1,35/1,36/1
   no switchport
   mtu {{ hec.fabric.interlink_mtu }}
!
interface Ethernet25/1
   description ->sw-hec{{ hec.hec_nr }}-spine-11
   ip address 10.11.0.15/31
interface Ethernet26/1
   description ->sw-hec{{ hec.hec_nr }}-spine-12
   ip address 10.12.0.15/31
interface Ethernet35/1
   description ->sw-hec{{ hec.hec_nr }}-spine-13
   ip address 10.13.0.15/31
interface Ethernet36/1
   description ->sw-hec{{ hec.hec_nr }}-spine-14
   ip address 10.14.0.15/31
!
interface Ethernet30/1
   description "->sw-hec{{ hec.hec_nr }}-brdr-03a, Et30"
interface Ethernet31/1
   description "->sw-hec{{ hec.hec_nr }}-brdr-03a, Et31"
!
interface Loopback1
   description Router-ID
   ip address {{ Lo1 }}/32
!
interface Loopback900
   description NW-MGMT
   ip address {{ hec.lo900_prefix }}.22/32
!
interface Management1
   vrf forwarding OOB
   ip address {{ hec.oob_prefix }}.52/{{ hec.oob_mask }}
!
router bgp {{ asn_local }}
   router-id {{ Lo1 }}
   neighbor 10.11.0.14 peer-group SPINE-PG
   neighbor 10.12.0.14 peer-group SPINE-PG
   neighbor 10.13.0.14 peer-group SPINE-PG
   neighbor 10.14.0.14 peer-group SPINE-PG
   neighbor 198.19.224.1 peer-group MLPEER-PG
   network {{ Lo1 }}/32
   network {{ hec.lo900_prefix }}.22/32
